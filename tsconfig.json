{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "paths": {},
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "jest.config.ts"
  ]
}